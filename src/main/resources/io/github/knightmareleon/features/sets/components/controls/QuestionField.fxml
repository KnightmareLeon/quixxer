<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<fx:root type="VBox"
    xmlns:fx="http://javafx.com/fxml/1"
    alignment="TOP_LEFT"
    style="-fx-border-color: white; -fx-padding: 24"
    stylesheets="/io/github/knightmareleon/css/controls.css"
    styleClass="standard-dark-bg, border-radius-15"
    spacing="24"
    fillWidth="true"
    maxWidth="1136">
    <Label text="Question" styleClass="standard-font"/>
    <TextArea fx:id="question" minHeight="96" styleClass="standard-font" style="-fx-text-fill: black !important"/>
    <Label text="Type" styleClass="standard-font"/>
    <ComboBox fx:id="qTypePicker" 
        styleClass="border-radius-15, standard-font"/>
    <Label text="Choices" styleClass="standard-font"/>
    <VBox fx:id="choices" 
        fillWidth="true"
        maxWidth="1136"
        spacing="12">
    </VBox>
    <Button 
        fx:id="addChoiceButton" 
        text="+ Add Choice" 
        styleClass="set-standard-bg,set-button,standard-font"
        onAction="#addChoice"
    />
</fx:root>