<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import io.github.knightmareleon.shared.ui.controls.IconButton?>
<?import io.github.knightmareleon.features.sets.components.controls.QuestionField?>

<VBox
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.github.knightmareleon.features.sets.components.create.SetsCreateController"
    fx:id="vbox"
    alignment="CENTER"
    styleClass="standard-dark-bg"
    style="-fx-padding: 48; -fx-border-radius: 53; -fx-background-radius: 53;"
    spacing="24"
    fillWidth="true"
    maxWidth="1136">
    <HBox 
        spacing="12"
        alignment="CENTER">
        <FontIcon iconLiteral="bi-folder-plus" iconSize="32" iconColor="white"/>
        <Label text="New Set"
            styleClass="standard-header-font"/>
        <Region HBox.hgrow="ALWAYS" />
        <IconButton 
            iconLiteral="bi-box-arrow-left"
            styleClass="set-standard-bg"
            iconStyleClass="icon-base-color"
            minHeight="48"
            minWidth="48"
            onAction="#onBackPageClicked"/>
    </HBox>
    <ScrollPane fx:id="scrollPane"
        maxWidth="1136"
        hbarPolicy="AS_NEEDED"
        vbarPolicy="AS_NEEDED"
        fitToWidth="true"
        fitToHeight="true"
        styleClass="standard-dark-bg"
        VBox.vgrow="ALWAYS">
        <VBox fx:id="vbox"
            alignment="TOP_LEFT"
            styleClass="standard-dark-bg"
            style="-fx-padding: 0 24 0 0"
            spacing="12"
            fillWidth="true">
            <Label text="Set Name"
                styleClass="standard-header-font"/>
            <TextField
                styleClass="border-radius-15,standard-font"
                style="-fx-text-fill: black !important"
                minHeight="44"/>
            <Label text="Subject"
                styleClass="standard-header-font"/>
            <ComboBox fx:id="subjectPicker" 
                styleClass="border-radius-15, standard-font"
                minHeight="44">
            </ComboBox>
            <Label text="Questions"
                styleClass="standard-header-font"/>
            <VBox 
                fx:id="questionContainer"
                spacing="24"
                fillWidth="true"/>
            <Button 
                fx:id="addQuestion"
                text="+ Add Question"
                maxWidth="1000000"
                styleClass="set-standard-bg,set-button,standard-font"
                onAction="#addQuestion"/>
        </VBox>

    </ScrollPane>
</VBox>