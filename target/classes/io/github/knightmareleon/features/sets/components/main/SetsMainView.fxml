<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>

<?import io.github.knightmareleon.shared.ui.controls.IconButton?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="io.github.knightmareleon.features.sets.components.main.SetsMainController"
    fx:id="vbox"
    alignment="CENTER"
    styleClass="standard-dark-bg"
    style="-fx-padding: 48; -fx-border-radius: 53; -fx-background-radius: 53;"
    spacing="24"
    fillWidth="true"
    maxWidth="1136">
    <HBox maxHeight="48">
        <HBox>
            <IconButton
                iconLiteral="fas-th-large"
                iconStyleClass="icon-base-color"
                styleClass="icon-button-base-bg"
                prefHeight="48"
                prefWidth="48"/>
            <IconButton
                iconLiteral="fas-bars"
                iconStyleClass="icon-base-color"
                styleClass="icon-button-base-bg"
                prefHeight="48"
                prefWidth="48"/>
        </HBox>
        <Region HBox.hgrow="ALWAYS" />
        <HBox spacing="12">
            <IconButton
                text=" Create Set"
                iconLiteral="bi-folder-plus"
                iconStyleClass="icon-base-color"
                styleClass="set-standard-bg"
                prefHeight="48"
                maxWidth="256"
                onAction="#onCreateSetsClicked"/>
            <TextField 
                promptText="Search"
                prefHeight="48"
                prefWidth="${vbox.width * 0.3679577464788732}"
                maxWidth="418"
                styleClass="border-radius-15"/>
        </HBox>
    </HBox>
    <ScrollPane fx:id="scrollPane"
        maxWidth="1136"
        hbarPolicy="AS_NEEDED"
        vbarPolicy="AS_NEEDED"
        fitToWidth="true"
        fitToHeight="true"
        styleClass="standard-dark-bg"
        VBox.vgrow="ALWAYS">
        <VBox fx:id="vbox"
            alignment="CENTER"
            styleClass="standard-dark-bg"
            style="-fx-padding: 48"
            spacing="48"
            fillWidth="true">
        </VBox>
    </ScrollPane>
</VBox>