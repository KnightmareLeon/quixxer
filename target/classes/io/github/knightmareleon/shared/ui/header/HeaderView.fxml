<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import io.github.knightmareleon.shared.ui.controls.IconButton?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.github.knightmareleon.shared.ui.header.HeaderController"
      styleClass="standard-dark-bg"
      spacing="10"
      alignment="CENTER_LEFT"
      style="-fx-padding: 10;">

    <Label 
        text="Quixxer"
        styleClass="standard-header-font"/>

    <Label 
        text=" |"
        styleClass="standard-font"
        style="-fx-font-size: 24px;"/>

    <IconButton
        text="Dashboard"
        iconLiteral="fas-border-all"
        iconStyleClass="icon-base-color"
        styleClass="icon-button-base-bg"
        onAction="#onDashboardClicked"/>

    <IconButton 
        text="Test"
        iconLiteral="dashicons-welcome-edit-page"
        iconStyleClass="icon-base-color"
        styleClass="icon-button-base-bg"
        onAction="#onTestClicked"/>

    <IconButton 
        text="Sets"
        iconLiteral="bi-folder2-open"
        iconStyleClass="icon-base-color"
        styleClass="icon-button-base-bg"
        onAction="#onSetsClicked"/>

    <IconButton 
        text="Settings"
        iconLiteral="fas-cog"
        iconStyleClass="icon-base-color"
        styleClass="icon-button-base-bg"
        onAction="#onSettingsClicked"/>

</HBox>